<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal" >

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:gravity="center_vertical|center">
			    <ImageView
			        android:id="@+id/imageEsPrincipalFilaPuente"
			        android:gravity="center_vertical|center"
			        android:layout_width="50dp"
			        android:layout_height="50dp"
			        android:adjustViewBounds="true"
			        android:scaleType="fitXY" />
	    </LinearLayout>

        <TextView 
            android:id="@+id/textNombreFilaPuente"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FF8C00"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Nombre del Puente"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <TextView 
            android:id="@+id/textLongitudFilaPuente"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Longitud del Puente"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <TextView 
            android:id="@+id/textVRNFilaPuente"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FF8C00"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Valor de reposiciÃ³n a nuevo del Puente"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView 
            android:id="@+id/textTipoFilaPuente"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Tipo de Puente"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
    </LinearLayout>

</LinearLayout>