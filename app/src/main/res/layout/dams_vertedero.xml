<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/PropertyImage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/login_header" />

   <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ListaVertedero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/lista_vertederos"
            android:textSize="30sp"
            android:textStyle="italic" />

        <ImageButton
            android:id="@+id/buttonAgregarVertedero_dams"
            android:layout_marginLeft="100dp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Agregar"
            android:background="@mipmap/agregar" />

    </LinearLayout>

   <HorizontalScrollView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:orientation="vertical" > 
	
		    <LinearLayout 
		        android:background="@android:color/darker_gray"
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:gravity="center"
		        android:orientation="horizontal">
		        <TextView 
		            android:id="@+id/textNumeroFilaVertedero"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:text="Vertedero número"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
		        <TextView 
		            android:id="@+id/textCapacidadAcumuladaFilaVertedero"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:text="Capacidad Acumulada del Vertedero"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
		        <TextView 
		            android:id="@+id/textTipoFilaVertedero"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:text="Tipo del Vertedero"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
		        <TextView 
		            android:id="@+id/textOperacionFilaVertedero"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:text="Operación del Vertedero"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
		        <TextView 
		            android:id="@+id/textLongitudCrestaFilaVertedero"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:text="Longitud de Cresta del Vertedero"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
		        <TextView 
		            android:id="@+id/textElevacionCrestaFilaVertedero"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:text="Elevacion de Cresta del Vertedero"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
		        <TextView 
		            android:id="@+id/textNumeroCompuertasFilaVertedero"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:text="Numero de Compuertas del Vertedero"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
		        <TextView 
		            android:id="@+id/textTipoCompuertasFilaVertedero"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:text="Tipo de Compuertas del Vertedero"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
		        <TextView 
		            android:id="@+id/textAlturaCompuertasFilaVertedero"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:text="Altura de Compuertas del Vertedero"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
		        <TextView 
		            android:id="@+id/textAnchoCompuertasFilaVertedero"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:text="Ancho de Compuertas del Vertedero"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
		        <TextView 
		            android:id="@+id/textControlCompuertasFilaVertedero"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:text="Control de Compuertas del Vertedero"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
		        <TextView 
		            android:id="@+id/textGastoPicoFilaVertedero"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:text="Gasto Pico del Vertedero"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
		
		        <TextView 
		            android:id="@+id/textElevacionLSCFilaVertedero"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:text="Elevación LSC del Vertedero"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
		        <TextView 
		            android:id="@+id/textEstructuraDisipadoraFilaVertedero"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:text="Estructura Disipadora del Vertedero"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
		        <TextView 
		            android:id="@+id/textAgujasFilaVertedero"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:text="Agujas del Vertedero"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
		        <TextView 
		            android:id="@+id/textAlturaAgujasFilaVertedero"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:text="Altura de Agujas del Vertedero"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
		        <TextView 
		            android:id="@+id/textComentariosFilaVertedero"
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:text="Comentarios del Vertedero"
		            android:textAppearance="?android:attr/textAppearanceMedium"/>
		    </LinearLayout>
	
			<ListView
			    android:id="@+id/listVertedero_dams"
			    android:layout_width="match_parent"
			    android:layout_height="340dp"
			    android:layout_marginLeft="10dp"
			    android:layout_marginRight="10dp"
			    android:layout_marginTop="10dp"
			    android:layout_weight="0.66"
			    android:background="@android:color/background_light"
			    android:cacheColorHint="@android:color/transparent"
			    android:divider="@android:color/background_dark"
			    android:dividerHeight="2dp"
			    android:paddingBottom="5dp"
			    android:paddingLeft="8dp"
			    android:paddingRight="8dp"
			    android:paddingTop="5dp"
			    android:scrollbarStyle="outsideOverlay" >
			</ListView>
		</LinearLayout>
   </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/BotonesFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="870dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >

        <ImageButton
            android:id="@+id/buttonSaveBotVertedero_dams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@mipmap/guardar" />

        <ImageButton
            android:id="@+id/buttonOutBotVertedero_dams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:background="@mipmap/salir" />
    </LinearLayout>

</LinearLayout>