              		    android:layout_marginBottom="32dip" />
            		</LinearLayout>
          		</LinearLayout>	
          		<LinearLayout 
              		android:id="@+id/layColumna52" 
              		android:orientation="vertical" 
              		android:layout_width="fill_parent" 
              		android:layout_height="wrap_content" 
              		android:paddingLeft="10dip" 
              		android:layout_weight="1" 
              		android:layout_marginTop="20.0dp">
            		<TextView 
                		android:id="@+id/textValRealRed" 
                		android:layout_width="fill_parent" 
                		android:layout_height="wrap_content" 
                		android:textSize="20sp" 
                		android:text="@string/val_real" 
                		android:textStyle="italic" 
                		android:layout_weight="1" />
            		<LinearLayout 
                		android:id="@+id/layValRealRed" 
                		android:orientation="horizontal" 
                		android:layout_width="fill_parent" 
                		android:layout_height="wrap_content" 
                		android:layout_weight="1">

              		<EditText
              		    android:id="@+id/editValRealRed_hydraulic"
              		    android:layout_width="wrap_content"
              		    android:layout_height="wrap_content"
              		    android:hint="@string/int_val"
              		    android:textSize="20sp" />

              		<Switch
              		    android:id="@+id/switchValRealRed_hydraulic"
              		    android:layout_width="wrap_content"
              		    android:layout_height="wrap_content"
              		    android:checked="true"
              		    android:enabled="false"
              		    android:layout_marginTop="20.0dp"
              		    android:textOn="MXN"
              		    android:textOff="USD"
              		    android:layout_marginBottom="32dip" />
            		</LinearLayout>
          		</LinearLayout>	
          	</LinearLayout>
          	<LinearLayout 
    	    android:id="@+id/BotonesFinal" 
    	    android:layout_width="wrap_content" 
    	    android:layout_height="wrap_content" 
    	    android:layout_alignParentRight="true"
    	    android:layout_marginTop="20dp"
    	    android:paddingBottom="10dp"
    	    android:layout_below="@+id/layRenglon5" 
    	    android:orientation="horizontal">
			     <ImageButton 
        	    android:id="@+id/buttonSaveBot2_2_hydraulic" 
        	    android:layout_width="wrap_content" 
        	    android:layout_height="wrap_content" 
        	    android:layout_marginRight="30dp" 
        	    android:background="@mipmap/guardar" />
        	<ImageButton 
        	    android:id="@+id/buttonOutBot2_2_hydraulic" 
        	    android:layout_width="wrap_content" 
        	    android:layout_height="wrap_content" 
        	    android:layout_marginRight="50dp" 
        	    android:background="@mipmap/salir" />
        	
    	</LinearLayout>
	</RelativeLayout>
</ScrollView>