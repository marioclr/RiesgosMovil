<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" >
 
  <ImageView
    android:id="@+id/imageEscudoEstado"
    android:layout_width="70dp"
    android:layout_height="90dp"
    android:layout_marginLeft="20dp"
    android:adjustViewBounds="true"
    android:scaleType="fitXY"
    android:contentDescription="Descripcion"/>
 
  <TextView
    android:id="@+id/textMunicipioCiudad"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textTipoColonia"
    android:layout_centerHorizontal="true"
    android:text="TextView" />
  

  <TextView
    android:id="@+id/textCodigoPostal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerInParent="true"
    android:text="15530"/>

  <TextView
      android:id="@+id/textTipoColonia"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_marginLeft="16dp"
      android:layout_toRightOf="@+id/imageEscudoEstado"
      android:text="Large Text"
      android:textAppearance="?android:attr/textAppearanceLarge" />
    
</RelativeLayout>