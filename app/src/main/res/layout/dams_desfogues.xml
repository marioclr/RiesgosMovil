<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/PropertyImage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_header" />

    <LinearLayout
        android:id="@+id/TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp" >

        <TextView
	        android:id="@+id/ListaDesfogues"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:text="@string/lista_desfogues"
	        android:layout_marginLeft="10dp"
	        android:textSize="30sp"
	        android:textStyle="italic" />
	
	    <ImageButton
	        android:id="@+id/buttonAgregarDesfogues_dams"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:background="@mipmap/agregar" />

    </LinearLayout>

    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:background="@android:color/darker_gray"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:gravity="center"
		        android:orientation="horizontal" >
	    <TextView 
            android:id="@+id/textNombreDesfogues"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/nombre_refer"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView 
            android:id="@+id/textTipoDesfogues"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/tipo"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView 
            android:id="@+id/textPropositoDesfogues"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/proposito"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView 
            android:id="@+id/textCapacidadDesfogues"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/capacidad"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView 
            android:id="@+id/textElevacionDesfogues"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/eleva_um"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView 
            android:id="@+id/textDimensionesDesfogues"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/dimensiones"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView 
            android:id="@+id/textComentariosDesfogues"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/comentarios"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listDesfogues_dams"
        android:layout_width="fill_parent"
        android:layout_height="51dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.16"
        android:background="@android:color/background_light"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/background_dark"
        android:dividerHeight="2dp"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:scrollbarStyle="outsideOverlay" >
    </ListView>

    <LinearLayout
        android:id="@+id/BotonesFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="870dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >

        <ImageButton
            android:id="@+id/buttonSaveBotDesfogues_dams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@mipmap/guardar" />

        <ImageButton
            android:id="@+id/buttonOutBotDesfogues_dams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@mipmap/salir" />
    </LinearLayout>

</LinearLayout>