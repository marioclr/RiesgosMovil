<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/PropertyImage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_header" />

   <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/ListaPuentes"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:text="@string/lista_puentes"
	        android:textSize="30sp"
	        android:textStyle="italic" />

        <ImageButton
            android:id="@+id/buttonAgregarPuente_ways"
            android:layout_marginLeft="100dp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Agregar"
            android:background="@mipmap/agregar" />

    </LinearLayout>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@android:color/holo_blue_light"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textEsPrincipalHeaderPuente"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Principal"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView 
            android:id="@+id/textNombreHeaderPuente"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Nombre del Puente"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView 
            android:id="@+id/textLongitudHeaderPuente"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Longitud del Puente"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView 
            android:id="@+id/textVRNHeaderPuente"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="VRN del Puente"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView 
            android:id="@+id/textTipoHeaderPuente"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Tipo de Puente"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <ListView
        android:id="@+id/listPuente_ways"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.66"
        android:background="@android:color/background_light"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/background_dark"
        android:dividerHeight="2dp"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:scrollbarStyle="outsideOverlay" >
    </ListView>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        <TextView
	            android:id="@+id/textTotalDePuentesPrincipales"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:text="Total De Puentes Principales: "
	            android:gravity="center_vertical"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	        <TextView
	            android:id="@+id/textValorTotalDePuentesPrincipales"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:text="Valor Total De Puentes Principales"
	            android:gravity="center_vertical"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
        <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        <TextView
	            android:id="@+id/textTotalVRNDePuentesPrincipales"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:text="Total VRN De Puentes Principales: "
	            android:gravity="center_vertical"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	        <TextView
	            android:id="@+id/textValorTotalVRNDePuentesPrincipales"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:text="Valor Total VRN De Puentes Principales"
	            android:gravity="center_vertical"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </LinearLayout>
        
    <LinearLayout
        android:id="@+id/BotonesFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginLeft="870dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >

        <ImageButton
            android:id="@+id/buttonSave_Puente_ways"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@mipmap/guardar" />

        <ImageButton
            android:id="@+id/buttonOutBot4_4_healt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:background="@mipmap/salir" />
    </LinearLayout>

</LinearLayout>